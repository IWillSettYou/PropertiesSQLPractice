<Window x:Class="IngatlanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingatlan Adatfeltöltés" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Leírás:" />
            <TextBox Name="DescriptionTextBox" />

            <TextBlock Text="Kategória:" />
            <ComboBox Name="CategoryComboBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" />


            <TextBlock Text="Ár:" />
            <TextBox Name="PriceTextBox" />

            <TextBlock Text="Kép URL:" />
            <TextBox Name="ImageUrlTextBox" />

            <CheckBox Name="TehermentesCheckBox" Content="Tehermentes" />

            <Button Content="Feltöltés" Click="SubmitButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
